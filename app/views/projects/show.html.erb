<h1><%= @project.title %></h1>

<% if @project.client %>
    Client: <%= @project.client.first_name %> <%= @project.client.last_name %>
<% else %>
    <%= link_to "Add a Client", new_project_client_path(@project, @project.build_client) %>
<% end %>

<p><strong>Time Entries:</strong></p>

<p><%= button_to 'Add New Entry', new_project_time_entry_path(@project), class: 'btn btn-primary', method: :get %></p>

<ul class="list-group">
    <% if @project.time_entries != [] %>
        <% current_user.projects.each do |t| %>
            <li class="list-group-item"><strong>Title:</strong> <%= link_to "Time Entry:", project_time_entry_path(@project, t) %> | <strong>Billable Hours:</strong> Filler </li>
        <% end %>
    <% else %>
        No recorded time entries. Click 'Add New Entry' to get started.
    <% end %>
</ul>
